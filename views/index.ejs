<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link href="lib/javascripts/bootstrap-3.3.7-dist/css/bootstrap.min.css" rel="stylesheet">
    <title>学生信息管理</title>
</head>
<body>
    <div class="container" style="width:100%">
        <div class="row clearfix">
            <div class="col-md-12 column"> 
                <br>    
                <div class="col-md-6 column">
                     <button type="button" class="btn btn-primary btn-default btn-block" data-toggle="modal" onclick="openStudentModal()">添加学生</button>
                </div>
                
                <div class="col-md-6 column">
                     <button type="button" class="btn btn-primary btn-default btn-block" onclick="window.open('/addKecheng')">添加课程</button>
                </div>
                <br><br>
                <h3>
                学生信息
                </h3>
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <td>姓名</td>
                            <td>年龄</td>
                            <td>性别</td>
                            <td>所选课程</td>
                            <td>操作</td>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i = 0 ; i < students.length ; i++){%>
                            <tr class="info">
                                <td><%=students[i].name%></td>
                                <td><%=students[i].age%></td>
                                <td><%=students[i].sex%></td>
                                <td><%=students[i].Kechengs%></td>
                                <td>
                                    <a href="/editStudent/<%=students[i].sid%>">修改</a>
                                    <a href="/removeStudent/<%=students[i].sid%>">删除</a>
                                </td>
                            </tr>
                        <%}%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- 模态框（Modal） -->
    <div class="modal fade" id="addStudent-Modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">添加学生信息</h4>
                </div>
                <div class="modal-body">
                     <form action="/doAddStudent" method="get">
                        <div class="form-group">
                            <label for="sid">学号</label><input class="form-control" name="sid" type="text" id="student-sid"/>
                        </div>
                        <div class="form-group">
                            <label for="name">姓名</label><input class="form-control" name="name" type="text" id="student-name"/>
                        </div>
                        <div class="form-group">
                            <label for="age">年龄</label><input class="form-control" name="age" type="text" id="student-age"/>
                        </div>
                        <div class="form-group">
                            <div><label for="sex">性别</label></div>
                            <input type="radio" name="student-sex" value="男"/>男
                            &nbsp;&nbsp;&nbsp;&nbsp;
                            <input type="radio" name="student-sex" value="女"/>女
                        </div>
                        <p id="kechengList">
                        </p>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    <button type="button" class="btn btn-primary" onclick="doAddStudent()">添加</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal -->
    </div>



    
    <script src="lib/javascripts/jquery/jquery.js"></script>
    <script src="lib/javascripts/bootstrap-3.3.7-dist/js/bootstrap.js"></script>
    <script type="text/javascript" src="privateJS/index.js"></script>
</body>
</html>